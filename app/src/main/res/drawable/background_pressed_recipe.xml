<?xml version="1.0" encoding="utf-8"?><!-- res/drawable/background_pressed.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <gradient
                android:angle="270"
                android:endColor="#FFFFFF"
                android:startColor="#AFAFAF" />
        </shape>
    </item>
    <item
        android:left="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#196CAE" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>