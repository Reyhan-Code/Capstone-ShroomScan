<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.result.ResultActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <ImageView
                    android:id="@+id/result_image_background"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:contentDescription="@string/result"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/tiram" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/result_image"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="end|bottom"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="@string/result"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tiram"
                    app:civ_border_width="4dp"
                    app:civ_border_color="@color/white"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_background"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/result_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/inter_bold"
                    android:text="@string/result"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/detail_planting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="50dp"
                    android:fontFamily="@font/inter"
                    tools:text="@string/detail_planting"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>